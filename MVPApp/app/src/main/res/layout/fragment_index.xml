<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/color_F2F4F3">

    <!--导航栏-->
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp"
        app:contentInsetStartWithNavigation="0dp"
        android:background="@android:color/holo_orange_dark"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/toolbar_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/tv_san"
                android:layout_width="45dp"
                android:layout_height="?attr/actionBarSize"
                android:src="@mipmap/home_scan"
                android:gravity="center"
                android:layout_gravity="left"
                android:layout_marginLeft="10dp"
                app:layout_constraintLeft_toLeftOf="@id/toolbar_content"
                app:layout_constraintTop_toTopOf="@id/toolbar_content"/>

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="?attr/actionBarSize"
                android:text="首页首页首页首页首页首页首页页首页首页首页首页页首页首页首页首页"
                android:gravity="center"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:textSize="25sp"
                android:lines="1"
                app:layout_constraintTop_toTopOf="@id/toolbar_content"
                app:layout_constraintBottom_toBottomOf="@id/toolbar_content"
                app:layout_constraintLeft_toRightOf="@id/tv_san"
                app:layout_constraintRight_toLeftOf="@id/tv_message"
                app:layout_constrainedWidth="true"
                />

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/tv_message"
                android:layout_width="45dp"
                android:layout_height="?attr/actionBarSize"
                android:src="@mipmap/home_scan"
                android:gravity="center"
                android:layout_gravity="right"
                android:layout_marginRight="10dp"
                app:layout_constraintTop_toTopOf="@id/toolbar_content"
                app:layout_constraintRight_toRightOf="@id/toolbar_content"/>

        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.Toolbar>


</android.support.constraint.ConstraintLayout>

