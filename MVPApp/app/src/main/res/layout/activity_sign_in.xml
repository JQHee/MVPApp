<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/color_F2F4F3">


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@android:color/holo_orange_dark"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.v7.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="?attr/actionBarSize"
            android:gravity="center"
            android:text="登录"
            android:layout_gravity="center"
            android:textColor="@android:color/white"
            android:textSize="25sp"
            android:maxLines="1"
            tools:ignore="HardcodedText"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"/>

    </android.support.v7.widget.Toolbar>

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/scroll_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/scroll_view_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!--登录的icon-->
            <android.support.constraint.ConstraintLayout
                android:id="@+id/scroll_view_content_icon"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@color/white"
                tools:ignore="MissingConstraints">

                <android.support.v7.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_launcher"
                    app:layout_constraintTop_toTopOf="@id/scroll_view_content_icon"
                    app:layout_constraintBottom_toBottomOf="@id/scroll_view_content_icon"
                    app:layout_constraintLeft_toLeftOf="@id/scroll_view_content_icon"
                    app:layout_constraintRight_toRightOf="@id/scroll_view_content_icon"/>
            </android.support.constraint.ConstraintLayout>

            

        </android.support.constraint.ConstraintLayout>

    </android.support.v4.widget.NestedScrollView>






</android.support.constraint.ConstraintLayout>