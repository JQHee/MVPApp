<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@color/color_white">

    <include layout="@layout/toolbar_layout"/>

    <ImageView
        android:id="@+id/image_head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/title_bar"
        android:src="@mipmap/icon_login_head"
        android:layout_marginTop="50dp"/>

    <com.maoliicai.common.widget.EditTextLayout
        android:id="@+id/et_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image_head"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="50dp"
        app:imageContent="@mipmap/icon_code"
        app:hintContent="请输入验证码"
        app:editType="3"/>

    <com.maoliicai.common.widget.EditTextLayout
        android:id="@+id/et_pwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_code"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="20dp"
        app:imageContent="@mipmap/icon_pwd"
        app:hintContent="@string/pwd_hint"
        app:editType="2"/>

    <TextView
        android:id="@+id/tv_register"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_below="@+id/et_layout"
        android:gravity="center"
        android:layout_marginTop="45dp"
        android:background="@drawable/btn_radius5dp_red"
        android:text="注册领红包"
        android:textColor="#ffffff"
        android:textSize="15dp"
        android:enabled="false"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13dp"
            android:textColor="@color/color_3"
            android:text="注册即代表同意"/>

        <TextView
            android:id="@+id/tv_protocol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13dp"
            android:textColor="@color/color_red_fb5a5c"
            android:text="《喵理财注册协议》"/>

    </LinearLayout>
</LinearLayout>