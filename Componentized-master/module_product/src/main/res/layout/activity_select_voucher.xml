<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">


    <com.maoliicai.common.widget.TitleBar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        app:TitleColor="@color/color_white"
        app:leftIcon="@mipmap/icon_back"
        app:rightText="使用规则"
        app:rightTextColor="@color/white"
        app:title="我的券包"
        app:titleBackground="@color/color_red_fb5a5c" />

    <android.support.design.widget.TabLayout
        android:id="@+id/tab_select_voucher"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/white"
        app:tabIndicatorColor="@color/color_red_fb5a5c"
        app:tabSelectedTextColor="@color/color_red_fb5a5c"
        app:tabTextColor="@color/color_9" />

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_select_voucher"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dp_10">

    </android.support.v4.view.ViewPager>


</LinearLayout>
